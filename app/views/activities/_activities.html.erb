<div>
  <% activities.each do |activity| %>
    <div>
      <%= link_to activity.owner.name, activity.owner %>
      <%= activity.message %>
      <%= link_to activity.target_name, activity.target_path %>
      <span> <%= time_ago_in_words(activity.created_at) %>
        <%= t "activity.ago"%>
      </span>
      <%= activity.likes.size %>
    </div>
  <% end %>
</div>
