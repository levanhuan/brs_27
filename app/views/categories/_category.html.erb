<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t "title.stt" %></th>
      <th><%= t "categories.name" %></th>
      <th><%= t "categories.number" %></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each_with_index do |category, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= category.category_name%></td>
        <td><%= category.books.size %></td>
      </tr>
    <% end %>
  </tbody>
</table>
