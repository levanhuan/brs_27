<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t "title.stt" %></th>
      <th><%= t "review.review_index_name" %></th>
      <th><%= t "review.review_index_author" %></th>
      <th><%= t "review.review_index_publish_date" %></th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each_with_index do |review, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= link_to review.title, review %></td>
        <td><%= review.user.name %></td>
        <td><%= review.created_at.to_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
