<h1><%= t "review.review_page_title" %></h1>
<div class="container">
  <div class="container-fluid">
    <b><%= @review.title %></b></br>
    <%= @review.user.name %> </br>
    <%= @review.book.title %> </br>
    <%= @review.created_at.to_s %> </br>
    <%= @review.content %>
  </div>

  <div class="col-md-8">
      <% if @review.comments.any? %>
        <h3><%= t "comment.title" %> (<%= @review.comments.count %>)</h3>
        <ol class="comments">
          <%= render @comments %>
        </ol>
        <%= will_paginate @comments %>
      <% end %>
  </div>
</div>
